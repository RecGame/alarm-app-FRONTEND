{
  "name": "life-signal",
  "version": "1.0.0",
  "description": "Alarm system",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.urgencias.alarmsystem",
    "productName": "Sistema de Alarmas UR",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ]
  },
  "keywords": [
    "alrm"
  ],
  "author": "Brandon Moreno",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "electron": "^40.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18"
  }
}
